{
  "editor.tokenColorCustomizations": {
    "comments": "#a5a5a5",
    "textMateRules": []
  },
  "dart.flutterSdkPath": ".fvm/versions/3.32.5",
  // Native C++ tooling
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.cStandard": "c17",
  "files.associations": {
    ".env": "dotenv",
    "*.css": "css",
    "css": "css",
    "*.mm": "objective-cpp",
    "*.m": "objective-c",
    "*.swift": "swift",
    "ios/**/*.h": "objective-cpp",
    "ios/**/*.swift": "swift",
    "Podfile": "ruby",
    "*.podspec": "ruby",
    "algorithm": "cpp",
    "cmath": "cpp",
    "new": "cpp",
    "__bit_reference": "cpp",
    "__config": "cpp",
    "__hash_table": "cpp",
    "__locale": "cpp",
    "__node_handle": "cpp",
    "__split_buffer": "cpp",
    "__tree": "cpp",
    "array": "cpp",
    "atomic": "cpp",
    "bit": "cpp",
    "bitset": "cpp",
    "cctype": "cpp",
    "cerrno": "cpp",
    "charconv": "cpp",
    "chrono": "cpp",
    "clocale": "cpp",
    "compare": "cpp",
    "concepts": "cpp",
    "cstdarg": "cpp",
    "cstddef": "cpp",
    "cstdint": "cpp",
    "cstdio": "cpp",
    "cstdlib": "cpp",
    "cstring": "cpp",
    "ctime": "cpp",
    "cwchar": "cpp",
    "cwctype": "cpp",
    "deque": "cpp",
    "exception": "cpp",
    "execution": "cpp",
    "iterator": "cpp",
    "memory": "cpp",
    "type_traits": "cpp",
    "utility": "cpp",
    "format": "cpp",
    "forward_list": "cpp",
    "functional": "cpp",
    "initializer_list": "cpp",
    "ios": "cpp",
    "iosfwd": "cpp",
    "istream": "cpp",
    "limits": "cpp",
    "locale": "cpp",
    "map": "cpp",
    "mutex": "cpp",
    "optional": "cpp",
    "ostream": "cpp",
    "print": "cpp",
    "queue": "cpp",
    "ratio": "cpp",
    "sstream": "cpp",
    "stack": "cpp",
    "stdexcept": "cpp",
    "streambuf": "cpp",
    "string": "cpp",
    "string_view": "cpp",
    "system_error": "cpp",
    "tuple": "cpp",
    "typeinfo": "cpp",
    "unordered_map": "cpp",
    "valarray": "cpp",
    "variant": "cpp",
    "vector": "cpp",
    "__verbose_abort": "cpp",
    "iomanip": "cpp",
    "cfloat": "cpp",
    "regex": "cpp",
    "fstream": "cpp",
    "list": "cpp",
    "random": "cpp",
    "set": "cpp",
    "unordered_set": "cpp",
    "filesystem": "cpp",
    "version": "cpp"
  },
  "cmake.configureOnOpen": false,
  "cmake.buildDirectory": "${workspaceFolder}/build/native",
  
  // iOS/Swift Configuration
  "swift.path": "/usr/bin/swift",
  "swift.buildPath": "${workspaceFolder}/ios",
  "swift.xcodeProjectPath": "${workspaceFolder}/ios/Runner.xcodeproj",
  "swift.packagePath": "${workspaceFolder}/ios",
  
  // iOS specific file associations merged into main files.associations above
  
  // Search settings to help VS Code find iOS files
  "search.useIgnoreFiles": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/build": true,
    "**/Pods": true,
    "**/.symlinks": true,
    "**/DerivedData": true
  },
  
  // Language server settings
  "swift.languageServerPath": "/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/sourcekit-lsp",
  
  // Xcode integration
  "ios.simulatorLogPath": "${workspaceFolder}/ios"
}
